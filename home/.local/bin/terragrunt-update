#!/bin/bash

set -e

LOCAL=~/.local/bin
REPO="gruntwork-io/terragrunt"
VERSION=$(http GET https://api.github.com/repos/${REPO}/releases/latest | jq -r '.name')

echo Downloading ${VERSION}

cd ${LOCAL}
wget -O terragrunt-${VERSION} https://github.com/${REPO}/releases/download/${VERSION}/terragrunt_linux_amd64
chmod +x terragrunt-${VERSION}
unlink terragrunt
ln -s terragrunt-${VERSION} terragrunt

echo Done

